// Problem E 上学路线
#include <iostream>
#include <cstdio>
#include <cstring>
using namespace std;
int main(){
	//freopen("input.in", "r", stdin);
	int a, b;
	cin >> a >> b;
	int f[20][20];
	memset(f, -1, sizeof(f)); //初始化为-1 
	int n, x, y;
	cin >> n;
	for(int i=1; i<=n; i++){
		cin >> x >> y;
		f[x][y] = 0; //有障碍 
	}
	f[1][1] = 1;
	for(int i=2; i<=a; i++)
		if(f[i][1] != 0) //初始化为-1, 障碍为0 
			f[i][1] = f[i-1][1]; //并不一定为1,因为有可能前一个有障碍 
	for(int j=2; j<=b; j++)
		if(f[1][j] != 0)
			f[1][j] = f[1][j-1];
	for(int i=2; i<=a; i++){
		for(int j=2; j<=b; j++){
			if(f[i][j] != 0) //不是障碍才能更新路径 
				f[i][j] = f[i-1][j]+f[i][j-1];
		}
	}
	/* 查看 
	for(int j=b; j>=1; j--){
		for(int i=1; i<=a; i++)
			printf("%5d", f[i][j]);
		cout << endl;
	} */	
	cout << f[a][b];
	return 0;
}
